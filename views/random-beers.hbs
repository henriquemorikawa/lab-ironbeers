    <div>
        <img src="{{beer.image_url}}" alt="{{beer.name}} image">
        
        <h2>{{beer.name}}</h2>
        
        <h4>{{beer.tagline}}</h4>

        <p>{{beer.description}}</p>

        <h4>Food Pairing</h4>

        {{#each beer.food_pairing}}
            <li>{{this}}</li>
        {{/each}}

        <h4>Brewers Tips</h4>

        <p>{{beer.brewers_tips}}</p>
    </div>
